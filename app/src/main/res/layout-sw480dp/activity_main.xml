<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="8dp"
  tools:context="com.djunicode.queuingapp.activity.MainActivity">

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:layout_centerHorizontal="true"
      android:fontFamily="monospace"
      android:textColor="@color/colorPrimaryDark"
      android:text="@string/welcome"
      android:textSize="25sp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:orientation="vertical"
      android:padding="8dp"
      android:weightSum="4">

        <android.support.v7.widget.CardView
          android:id="@+id/signUpStudentCardView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:foreground="?attr/selectableItemBackground"
          android:focusable="true"
          android:clickable="true"
          app:cardUseCompatPadding="true"
          app:cardBackgroundColor="@color/colorPrimary">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:text="@string/sign_up_as_student"
              android:gravity="center"
              android:textColor="@android:color/white"
              android:textSize="20sp"
              android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
          android:id="@+id/logInStudentCardView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:foreground="?attr/selectableItemBackground"
          android:focusable="true"
          android:clickable="true"
          app:cardUseCompatPadding="true"
          android:layout_marginTop="16dp">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:text="@string/log_in_as_student"
              android:gravity="center"
              android:textColor="@color/colorPrimary"
              android:textSize="20sp"
              android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
          android:id="@+id/signUpTeacherCardView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:foreground="?attr/selectableItemBackground"
          android:focusable="true"
          android:clickable="true"
          android:layout_marginTop="16dp"
          app:cardUseCompatPadding="true"
          app:cardBackgroundColor="@color/colorPrimary">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:text="@string/sign_up_as_teacher"
              android:gravity="center"
              android:textColor="@android:color/white"
              android:textSize="20sp"
              android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
          android:id="@+id/logInTeacherCardView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:foreground="?attr/selectableItemBackground"
          android:focusable="true"
          android:clickable="true"
          android:layout_marginTop="16dp"
          app:cardUseCompatPadding="true">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:text="@string/log_in_as_teacher"
              android:gravity="center"
              android:textColor="@color/colorPrimary"
              android:textSize="20sp"
              android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>

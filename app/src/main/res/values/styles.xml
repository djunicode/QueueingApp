<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
  </style>

  <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
  </style>

  <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">#2196f3</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/enter_from_right</item>
    <item name="android:activityOpenExitAnimation">@anim/exit_to_left</item>
    <item name="android:activityCloseEnterAnimation">@anim/enter_from_left</item>
    <item name="android:activityCloseExitAnimation">@anim/exit_to_right</item>
  </style>
</resources>

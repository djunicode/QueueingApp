<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/login_bg"
  tools:context="com.djunicode.queuingapp.activity.StudentQueueActivity">

  <TextView
    android:id="@+id/positionTV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/your_position_in_the_queue_is"
    android:layout_gravity="center_horizontal"
    android:textSize="30sp"
    android:gravity="center"
    android:textColor="@android:color/white"
    android:fontFamily="sans-serif-smallcaps"
    android:textStyle="bold"
    android:layout_marginTop="50dp"/>

  <android.support.v7.widget.CardView
    android:id="@+id/queueNumberCardView"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerInParent="true"
    android:layout_marginTop="130dp"
    android:layout_marginBottom="20dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp">

    <TextView
      android:id="@+id/queuePositionTextView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:textSize="50sp"
      android:gravity="center"
      android:textStyle="bold"
      android:textColor="@color/colorPrimary"/>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:id="@+id/doneButton"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="50dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="@string/i_am_done"
      android:layout_gravity="center_horizontal"
      android:drawableEnd="@drawable/ic_done"
      android:drawablePadding="10dp"
      android:textColor="@android:color/white"
      android:textSize="20sp"
      android:padding="10dp"/>

  </android.support.v7.widget.CardView>

</RelativeLayout>
